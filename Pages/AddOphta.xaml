<Page x:Class="MenuWithSubMenu.Pages.AddOphta"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuWithSubMenu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddOphta"
      Background="White"
      >

    <Grid Margin="10px">
        <StackPanel>
            <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Nom" Name="nomText"/>
            <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Prenom" Name="prenomText" />
            <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Adresse" Name="adresseText" />
            <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Email" Name="emailText" />
            <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Telephone" Name="telText" />
            <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="INPE" Name="inpeText" />

            <Button Margin="5" Content="Ajouter Ophtalmologue"  VerticalAlignment="Center" HorizontalAlignment="Center" Click="addOphta"/>
        </StackPanel>
    </Grid>
</Page>
