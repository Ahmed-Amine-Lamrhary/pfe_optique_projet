<Page x:Class="MenuWithSubMenu.Pages.AllUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuWithSubMenu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllUsers">


    <Grid x:Name="grid_AssetView"  VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid Name="clientsDataGrid" AutoGeneratedColumns="DataGrid_AutoGeneratedColumns">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Edit">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>

                            <MenuItem Click="AddPresetButton_Click" x:Name="AddPresetButton">
                                <MenuItem.Icon>
                                    <Image Source="G:\Studies\S4\PFE\pfe_optique\Assets\dropdown.jpg" Height="20"/>
                                </MenuItem.Icon>

                                <MenuItem.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Ajouter visite"/>
                                        <MenuItem Header="Voir client"/>
                                        <MenuItem Header="Modifier client"/>
                                        <MenuItem Header="Supprimer client"/>
                                    </ContextMenu>
                                </MenuItem.ContextMenu>
                            </MenuItem>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
