<Application x:Class="MenuWithSubMenu.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MenuWithSubMenu"
             xmlns:local1="clr-namespace:MenuWithSubMenu.Utils"
             StartupUri="SplashScreen.xaml"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontFamily" Value="Fonts/#Poppins" />
            </Style>

            <Style TargetType="{x:Type TextBox}">
                <Setter Property="FontFamily" Value="Fonts/#Poppins" />
            </Style>

            <local1:NullVisibilityConverter x:Key="NullVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
