            <Setter Property="Width" Value="13"/>
            <Setter Property="Height" Value="13" />
            <Setter Property="Margin" Value="0 0 8 0" />
            <Setter Property="Opacity" Value="0.4" />
        </Style>
    </Window.Resources>
