<Page x:Class="MenuWithSubMenu.PagesStock.FournisseurProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuWithSubMenu.PagesStock"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      Title="FournisseurProfile"
      >

    <Grid>
        <StackPanel>
            <Button Margin="0 0 0 10" Click="ReturnBtn_Click" Name="returnBtn" Background="WhiteSmoke" Content="&lt; Return"  HorizontalAlignment="Left"/>

            <!-- Info -->
            <StackPanel>
                <TextBlock Text="Informations Personnelles" />

                <TextBlock Text="Nom" Name="nomBox" />
                <TextBlock Text="Adresse" Name="adresseBox" />
                <TextBlock Text="Email" Name="emailBox" />
                <TextBlock Text="Telephone" Name="telephoneBox" />
                <TextBlock Text="Description" Name="descBox" />
            </StackPanel>

            <!-- Commandes -->
            <StackPanel Margin="5">
                <TextBlock Text="Commandes" />

                <DataGrid hc:DataGridAttach.ShowRowNumber="True" Name="commandesData" AutoGeneratedColumns="DataGrid_AutoGeneratedColumns">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="50" Header="Edit">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <MenuItem Click="AddPresetButton_Click" x:Name="AddPresetButton">
                                        <MenuItem.Icon>
                                            <TextBlock Text="More" />
                                        </MenuItem.Icon>

                                        <MenuItem.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Voir Commande" Click="voirCommande" />
                                            </ContextMenu>
                                        </MenuItem.ContextMenu>
                                    </MenuItem>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
