<Page x:Class="MenuWithSubMenu.PagesStock.Fournisseurs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuWithSubMenu.PagesStock"
      mc:Ignorable="d" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Fournisseurs"
      Background="White"
      >

    <Grid x:Name="grid_AssetView"  VerticalAlignment="Top">
        <Border 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        CornerRadius="10"
            Panel.ZIndex="1000"
        Width="400"
        Height="247"
        Name="loadingBox"
        Background="{DynamicResource RegionBrush}">
            <hc:SimplePanel>
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="Please wait..."/>
            </hc:SimplePanel>
        </Border>

        <StackPanel>
            <Button  Content="Ajouter Fournisseur" Click="addFournisseur"></Button>

            <DataGrid Visibility="Hidden" hc:DataGridAttach.ShowRowNumber="True" Name="fournisseursDataGrid" AutoGeneratedColumns="DataGrid_AutoGeneratedColumns">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="50" Header="Edit">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <MenuItem Click="AddPresetButton_Click" x:Name="AddPresetButton">
                                    <MenuItem.Icon>
                                        <TextBlock Text="More" />
                                    </MenuItem.Icon>

                                    <MenuItem.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Voir fournisseur" Click="voirFournisseur" />
                                            <MenuItem Header="Modifier fournisseur" Click="updateFournisseur"/>
                                            <MenuItem Header="Supprimer fournisseur" Click="deleteFournisseur"/>
                                        </ContextMenu>
                                    </MenuItem.ContextMenu>
                                </MenuItem>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
