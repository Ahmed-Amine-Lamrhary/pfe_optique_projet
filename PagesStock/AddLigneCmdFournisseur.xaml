<Page x:Class="MenuWithSubMenu.PagesStock.AddLigneCmdFournisseur"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:MenuWithSubMenu.PagesStock"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add ligne de commande"
      >

    <Grid Background="White" Margin="10">
        <StackPanel>
            <Button Margin="10" Click="ReturnBtn_Click" Name="returnBtn" Background="WhiteSmoke" Content="&lt; Return"  HorizontalAlignment="Left"/>

            <ComboBox Margin="5" Name="categorie" SelectionChanged="selectItem"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Quantité de commande" Name="qteText"/>
                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Prix unitaire" Name="prixText" />
                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Garantie" Name="garantieText" />
                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Marque" Name="marqueText" />
                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Description" Name="descText" />
                </StackPanel>
                <Grid Grid.Column="1">
                    <!-- Verre Optique -->
                    <StackPanel Visibility="Collapsed" Name="verrePanel">
                        <ComboBox Margin="5" Height="23" Text="Type de verres" Name="typeVerresText" />
                        <!-- Add Traitement -->
                        <StackPanel Margin="10">
                            <StackPanel Margin="0 0 0 10" Orientation="Horizontal" VerticalAlignment="Center">
                                <ToggleButton IsChecked="True" Name="medicamentsCheckbox" Style="{StaticResource ToggleButtonSwitch}"/>
                                <TextBlock Text="Traitements" Margin="5" />
                            </StackPanel>

                            <StackPanel Visibility="{Binding IsChecked,ElementName=medicamentsCheckbox,Converter={StaticResource Boolean2VisibilityConverter}}">
                                <StackPanel Name="traitementsBox"></StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <ComboBox Margin="0 0 10 0" Width="100" Name="newTraitementNom" />
                                    <TextBox Margin="0 0 10 0" Width="100" Name="newTraitementNiveau"/>
                                    <Button Content="Ajouter" Click="addTraitVerreButton" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <!--Parameters-->
                        <Grid Margin="10px">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="OD :"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="od_sph_verre"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="od_cyl_verre"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="od_axe_verre"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="od_add_verre"/>
                                </StackPanel>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock Text="OG :"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="og_sph_verre"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="og_cyl_verre"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="og_axe_verre"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="og_add_verre"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <TextBox Margin="5" Height="23" TextWrapping="Wrap"  Text="Modele" Name="modelText"/>
                        <TextBox Margin="5" Height="23" TextWrapping="Wrap"  Text="Teint" Name="teintText"/>
                    </StackPanel>
                    <!-- Lentille -->
                    <StackPanel Visibility="Collapsed" Name="lentillePanel">
                        <ComboBox SelectionChanged="TypeLentilleText_SelectionChanged"  Margin="5" Height="23" Text="Type de Lentille" Name="typeLentilleText" />
                        <!-- Lentille Torique-->
                        <!-- Don't need more parameters -->
                        <!--Lentille MultiFocale-->
                        <StackPanel Visibility="Collapsed" Name="panelMultiFocale" Orientation="Horizontal">
                            <TextBox Margin="5" Height="23" Width="150" Text="DOM" Name="domText" />
                        </StackPanel>
                        <!--Lentille Spherique-->
                        <StackPanel Visibility="Collapsed" Name="panelSpherique" Orientation="Horizontal">
                            <TextBox Margin="5" Height="23" Width="75" Text="RC" Name="rcText"/>
                            <TextBox Margin="5" Height="23" Width="75" Text="DIA" Name="diaText" />
                        </StackPanel>
                        <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="Couleur" Name="couleurLentille"/>
                        <!-- Add Traitement -->
                        <StackPanel Margin="10">
                            <StackPanel Margin="0 0 0 10" Orientation="Horizontal" VerticalAlignment="Center">
                                <ToggleButton IsChecked="True" Name="traitementCheckbox" Style="{StaticResource ToggleButtonSwitch}"/>
                                <TextBlock Text="Traitement" Margin="5" />
                            </StackPanel>

                            <StackPanel Visibility="{Binding IsChecked,ElementName=traitementCheckbox,Converter={StaticResource Boolean2VisibilityConverter}}">
                                <StackPanel Name="traitementsLentilleBox"></StackPanel>

                                <StackPanel Name="Combo"  Orientation="Horizontal">
                                    <ComboBox Margin="0 0 10 0" Width="100" Name="lentilleNewTrat"/>
                                    <TextBox Margin="0 0 10 0" Width="100" Name="lentilleNewTratNiveau" />
                                    <Button Content="Ajouter" Click="addTraitLentilleButton" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                        <!--Parameters-->
                        <Grid Margin="10px">
                            <StackPanel>
                                <StackPanel  Orientation="Horizontal">
                                    <TextBlock Text="OD :"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="od_sph_lentille"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="od_cyl_lentille"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="od_axe_lentille"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="od_add_lentille"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="OG :"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="og_sph_lentille"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="og_cyl_lentille"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="og_axe_lentille"/>
                                    <TextBox Margin="5" Height="23" TextWrapping="Wrap" Text="1" Name="og_add_lentille"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <!-- Cadre -->
                    <StackPanel Visibility="Collapsed" Name="cadrePanel">
                        <TextBlock Text="Infos Cadre :" />
                        <TextBox Text="Diametre de Verres" Name="diametreText" />
                        <TextBox Text="Pont" Name="pontText" />
                        <TextBox Text="Longueur Branche" Name="langeur_brance_text" />
                        <TextBox Text="Largeur" Name="largeurText" />
                        <TextBox Text="Hauteur Verre" Name="hautteur_verre_text" />
                        <TextBox Text="Largeur Verre" Name="largeur_verre_text" />
                        <TextBox Text="Couleur" Name="couleurText" />
                    </StackPanel>
                </Grid>

            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Annuler la ligne" Click="deleteLigne" />
                <Button Content="Enregistrer la ligne" Click="saveLigne" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
