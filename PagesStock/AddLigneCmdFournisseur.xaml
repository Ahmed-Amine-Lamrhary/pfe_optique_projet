                            <iconPacks:PackIconRemixIcon Kind="AddCircleLine" Width="14" Height="14" Name="refBtnIcon" />
                        </Button>
                    </StackPanel>
                    
                    <hc:TextBox Margin="0 10 0 0" Visibility="Collapsed" Name="newRefText"/>

                    <TextBlock Style="{StaticResource LabelTextStyle}" Text="Quantité de commande" />
                    <hc:TextBox Name="qteText"/>

