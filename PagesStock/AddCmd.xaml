<Page x:Class="MenuWithSubMenu.PagesStock.AddCmd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuWithSubMenu.PagesStock"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCmd"
      >
    <Grid>
        <StackPanel>
            <ComboBox Name="selectFournisseur" Text="Fournisseur" />

            <TextBlock Text="Ajouter les lignes de commandes:" FontSize="20" />

            <ListBox Name="lignesCmdBox" MouseDoubleClick="editLigne">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="View" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Ajouter" Click="ajouterLigne" />

            <Button Margin="50" Content="Enregistrer la commande" Click="saveCmd" />
        </StackPanel>
    </Grid>
</Page>
